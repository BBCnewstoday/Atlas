	<Frame name="AtlasLootInfo" hidden="false">
		<Size>
			<AbsDimension x="128" y="75"/>
		</Size>
        <Frames>
            <Button name="$parentHidePanel" inherits="OptionsButtonTemplate" text="ATLASLOOT_PANEL_TOGGLE">
                <Size>
                    <AbsDimension x="140" y="20"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="-5" y="-3"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnShow>
                        this:SetFrameLevel( (this:GetParent()):GetFrameLevel() + 1 );
                    </OnShow>
                    <OnClick>
                        if AtlasLootOptions["HidePanel"] then
                            AtlasLootOptions["HidePanel"] = false;
                            if (AtlasFrame) then
                                if AtlasFrame:IsVisible() then
                                    AtlasLootPanel:Show();
                                end
                            end
                        else
                            AtlasLootOptions["HidePanel"] = true;
                            if (AtlasFrame) then
                                if AtlasFrame:IsVisible() then
                                    AtlasLootPanel:Hide();
                                end
                            end
                        end
                        AtlasLootOptionsFrameHidePanel:SetChecked(AtlasLootOptions.HidePanel);
                        AtlasLoot_SetupForAtlas();
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parent_Text1" inherits="GameFontNormalSmall" text="ATLASLOOT_VERSION" justifyH="LEFT">
					<Size>
						<AbsDimension x="180" y="10"/>
